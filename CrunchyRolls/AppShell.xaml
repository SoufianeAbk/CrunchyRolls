<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrunchyRolls.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    FlyoutBehavior="Disabled">

    <!-- Login Page Route -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />

    <!-- Tabbladen voor ingelogde gebruikers -->
    <TabBar x:Name="MainTabs" IsVisible="False">

        <ShellContent 
            Title="Producten" 
            Icon="shop.png"
            ContentTemplate="{DataTemplate local:ProductsPage}"
            Route="producten" />

        <ShellContent 
            Title="Winkelwagen" 
            Icon="cart.png"
            ContentTemplate="{DataTemplate local:CartPage}"
            Route="cart" />

        <ShellContent 
            Title="Mijn Bestellingen" 
            Icon="orders.png"
            ContentTemplate="{DataTemplate local:OrdersPage}"
            Route="orders" />

        <ShellContent 
            Title="Profiel" 
            Icon="profile.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="profile" />

    </TabBar>

</Shell>
