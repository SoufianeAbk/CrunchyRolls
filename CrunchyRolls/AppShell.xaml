<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrunchyRolls.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrunchyRolls.Views"
    FlyoutBehavior="Disabled">

    <!-- ===== LOGIN ROUTE ===== -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />

    <!-- ===== MAIN APP ROUTES (Tabbed Interface) ===== -->
    <TabBar x:Name="MainTabs" Route="app" IsVisible="False">

        <!-- Producten Tab -->
        <ShellContent 
            Title="Producten" 
            Icon="shop.png"
            ContentTemplate="{DataTemplate local:ProductsPage}"
            Route="producten" />

        <!-- Winkelwagen Tab (uses OrderPage) -->
        <ShellContent 
            Title="Winkelwagen" 
            Icon="cart.png"
            ContentTemplate="{DataTemplate local:OrderPage}"
            Route="cart" />

        <!-- Bestellingen Tab (uses OrderHistoryPage) -->
        <ShellContent 
            Title="Bestellingen" 
            Icon="orders.png"
            ContentTemplate="{DataTemplate local:OrderHistoryPage}"
            Route="orders" />

    </TabBar>

</Shell>
