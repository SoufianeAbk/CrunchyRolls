<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrunchyRolls.Views.LoginPage"
             Title="Inloggen"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15"
                             VerticalOptions="Center">

            <!-- Logo / Titel -->
            <VerticalStackLayout Spacing="10"
                                 HorizontalOptions="Center"
                                 Margin="0,20">
                <Label Text="ðŸ£"
                       FontSize="60"
                       HorizontalTextAlignment="Center" />
                <Label Text="CrunchyRolls"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="#333" />
                <Label Text="Sushi Bezorgservice"
                       FontSize="14"
                       TextColor="#666"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Foutmelding -->
            <Frame IsVisible="{Binding IsErrorVisible}"
                   BorderColor="#FF6B6B"
                   CornerRadius="8"
                   Padding="12"
                   BackgroundColor="#FFE5E5"
                   HasShadow="False">
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#CC0000"
                       FontSize="12" />
            </Frame>

            <!-- Email Invoer -->
            <VerticalStackLayout Spacing="5">
                <Label Text="E-mailadres"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#333" />

                <Entry x:Name="EmailEntry"
                       Placeholder="Voer je email in"
                       PlaceholderColor="#999"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       BackgroundColor="White"
                       TextColor="#333"
                       FontSize="14" />
            </VerticalStackLayout>

            <!-- Wachtwoord Invoer -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Wachtwoord"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#333" />

                <Entry x:Name="PasswordEntry"
                       Placeholder="Voer je wachtwoord in"
                       PlaceholderColor="#999"
                       Text="{Binding Password}"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="#333"
                       FontSize="14" />
            </VerticalStackLayout>

            <!-- Onthoud mij -->
            <HorizontalStackLayout Spacing="10" Margin="0,5">
                <CheckBox IsChecked="{Binding RememberMe}" />
                <Label Text="Onthoud mij"
                       FontSize="12"
                       TextColor="#666"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Inlog Knop -->
            <Button Text="Inloggen"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    Padding="0,12"
                    CornerRadius="8"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#FF6B35"
                    TextColor="White"
                    Margin="0,10" />

            <!-- Laad Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="#FF6B35"
                               Margin="0,10" />

            <!-- Voettekst -->
            <VerticalStackLayout Spacing="10" Margin="0,30">
                <Label Text="Nog geen account?"
                       FontSize="12"
                       TextColor="#666"
                       HorizontalTextAlignment="Center" />

                <Button Text="Registreren"
                        Command="{Binding RegisterCommand}"
                        BackgroundColor="Transparent"
                        TextColor="#FF6B35"
                        FontSize="12"
                        FontAttributes="Bold"
                        Padding="0" />

                <BoxView HeightRequest="1"
                         Color="#DDD"
                         Margin="0,10" />

                <Label Text="Test: test@example.com / Password123"
                       FontSize="10"
                       TextColor="#999"
                       HorizontalTextAlignment="Center"
                       Margin="0,10" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
