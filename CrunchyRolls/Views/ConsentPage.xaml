<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrunchyRolls.Views.ConsentPage"
             Title="Accept Terms"
             BackgroundColor="#1a1a1a">

    <VerticalStackLayout Spacing="15" Padding="20" VerticalOptions="FillAndExpand">

        <!-- Header -->
        <Label Text="ðŸ” Welcome to CrunchyRolls"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalTextAlignment="Center"/>

        <Label Text="Before you continue, please review and accept our privacy terms"
               FontSize="13"
               TextColor="#b0b0b0"
               HorizontalTextAlignment="Center"/>

        <!-- Scrollable Content -->
        <ScrollView>
            <VerticalStackLayout Spacing="12">

                <!-- Privacy Policy -->
                <Border Stroke="#FFD700" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="ðŸ“‹ Privacy Policy"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="Data collection &amp; processing consent (Required)"
                                   FontSize="11"
                                   TextColor="#b0b0b0"/>
                        </VerticalStackLayout>
                        <CheckBox Grid.Column="1"
                                  x:Name="PrivacyPolicyCheckBox"
                                  Color="#FFD700"
                                  VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Terms & Conditions -->
                <Border Stroke="#FFD700" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="âš–ï¸ Terms &amp; Conditions"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="I accept the terms and conditions (Required)"
                                   FontSize="11"
                                   TextColor="#b0b0b0"/>
                        </VerticalStackLayout>
                        <CheckBox Grid.Column="1"
                                  x:Name="TermsCheckBox"
                                  Color="#FFD700"
                                  VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Data Processing -->
                <Border Stroke="#FFD700" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="ðŸ“Š Data Processing"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="Allow us to process your data (Required)"
                                   FontSize="11"
                                   TextColor="#b0b0b0"/>
                        </VerticalStackLayout>
                        <CheckBox Grid.Column="1"
                                  x:Name="DataProcessingCheckBox"
                                  Color="#FFD700"
                                  VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Optional: Marketing -->
                <Border Stroke="#FFD700" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="ðŸ“§ Marketing (Optional)"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="Receive promotional emails and offers"
                                   FontSize="11"
                                   TextColor="#b0b0b0"/>
                        </VerticalStackLayout>
                        <CheckBox Grid.Column="1"
                                  x:Name="MarketingCheckBox"
                                  Color="#FFD700"
                                  VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Optional: Cookies -->
                <Border Stroke="#FFD700" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="ðŸª Cookies (Optional)"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="Allow analytics and performance tracking"
                                   FontSize="11"
                                   TextColor="#b0b0b0"/>
                        </VerticalStackLayout>
                        <CheckBox Grid.Column="1"
                                  x:Name="CookiesCheckBox"
                                  Color="#FFD700"
                                  VerticalOptions="Center"/>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Actions -->
        <VerticalStackLayout Spacing="10" VerticalOptions="End">

            <Button Text="âœ… Accept &amp; Continue"
                    x:Name="AcceptButton"
                    Background="#4CAF50"
                    TextColor="White"
                    Padding="15"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Clicked="OnAcceptClicked"/>

            <Button Text="âŒ Decline"
                    Background="#FF6B6B"
                    TextColor="White"
                    Padding="15"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Clicked="OnDeclineClicked"/>

            <Label Text="You must accept required terms to continue"
                   FontSize="10"
                   TextColor="#b0b0b0"
                   HorizontalTextAlignment="Center"/>

        </VerticalStackLayout>

    </VerticalStackLayout>

</ContentPage>
